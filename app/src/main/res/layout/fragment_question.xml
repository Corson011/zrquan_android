<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton" />

    <com.zrquan.mobile.widget.switchbutton.SwitchButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sb_default" />

    <TextView
        android:id="@+id/tv_test_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="拍照弹窗"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="分享弹窗"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_select_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="选择所在地弹窗"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_select_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="选择性别弹窗"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_image_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="查看图片"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_logout_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="退出账户"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_test_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:text="测试播放音乐"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:textSize="20sp"
        android:textColor="#000000" />

</LinearLayout>