        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13.0dip"
        android:gravity="center">

        <Button
            android:id="@+id/btn_regist"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="46.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_button_white_bg"
            android:text="@string/account_regist"
            android:textColor="@color/main_link_text_color"
            android:textSize="17.0sp" />

        <Button
            android:id="@+id/btn_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="46.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_button_white_bg"
            android:text="@string/login"
            android:textColor="@color/main_content_retweet_text_color"
            android:textSize="17.0sp" />
    </LinearLayout>

