<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="14sp"
        android:textColor="#ff858585"
        android:id="@+id/dialogue_share_title"
        android:paddingLeft="16.0dip"
        android:paddingTop="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="分享到..."
        android:singleLine="true" />

    <TableLayout
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:stretchColumns="*">

        <TableRow>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dialogue_share_weixin_circle_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/icon_weixin_circle" />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff858585"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="微信朋友圈"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dialogue_share_weixin_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/icon_weixin" />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff858585"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="微信好友"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dialogue_share_weibo_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/icon_weibo" />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff858585"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="新浪微博"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dialogue_share_qq_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/icon_qq" />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff858585"
                    android:gravity="center"
                    android:id="@+id/dialogue_share_qq_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="QQ好友"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dialogue_share_maimai_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@drawable/icon_maimai" />

                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff858585"
                    android:gravity="center"
                    android:id="@+id/dialogue_share_maimai_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="脉脉动态"
                    android:singleLine="true" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dialogue_share_feed_btn"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialogue_share_feed_icon"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/purpose_select_icon" />

        <TextView
            android:textSize="14sp"
            android:textColor="#ff858585"
            android:layout_gravity="center"
            android:id="@+id/dialogue_share_feed_sync_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="同步分享到脉脉动态" />
    </LinearLayout>

    <include layout="@layout/common_border" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/font_top_btn"
        android:gravity="center"
        android:id="@+id/dialogue_share_cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="取消" />
</LinearLayout>