<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AnimBottom">
        <item name="android:windowEnterAnimation">@anim/anim_menu_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_menu_slide_down</item>
    </style>

    <style name="ComposePopupAnimation">
        <item name="android:windowEnterAnimation">@anim/main_enter</item>
        <item name="android:windowExitAnimation">@anim/main_exit</item>
    </style>

    <style name="BottomMenuDialogTheme2" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="BottomMenuDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="StartUpTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SettingTitleText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/settings_item_padding_left</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin_bottom</item>
    </style>
    <style name="SettingMainText">
        <item name="android:textSize">17.0sp</item>
        <item name="android:layout_marginLeft">@dimen/settings_item_padding_left</item>
    </style>
    <style name="SettingSubText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_marginRight">@dimen/settings_item_text_padding_right</item>
    </style>
    <style name="SettingHintText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/settings_item_padding_left</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin_bottom</item>
    </style>
    <style name="SettingExplainText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/settings_item_padding_left</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_marginTop">@dimen/settings_text_explain_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin_top</item>
    </style>
</resources>
